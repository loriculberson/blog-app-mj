<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{contents}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <div class="row mt-4">
  <div class="col-md-6">
    <h3>Comments:</h3>
  <p>{{comment}}</p>
    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-title">Add comment:</label>
        <input class="form-input" type="text" id="comment-text" name="comment-text" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
</div>
